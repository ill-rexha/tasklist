
<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div>
        <%= pluralize(task.errors.count, "個のエラーがあります") %>
      <ul>
        <% task.errors.full_massages.each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :status,"状態" %>
  <%= f.text_field :status %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit 'タスクを登録' %>
<% end %>
